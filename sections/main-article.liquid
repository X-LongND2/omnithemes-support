{% liquid
  assign size_breadcrumbs = settings.text_base_size | times: 0.007875
  assign size_breadcrumbs_mobile = settings.text_base_size | times: 0.0070875
  assign search_type = 'query,' | append: settings.search_type
  assign show_image_banner = false
  for block in section.blocks
    if block.type == 'featured_image' and article.image != blank
      assign show_image_banner = true
    endif
  endfor
%}
{% style %}
  .size_breadcrumbs {
    font-size: {{ size_breadcrumbs_mobile }}rem;
  }
  .article--{{ section.id }} h2,
  .article--{{ section.id }} h3 {
    scroll-margin-top: 85px;
  }
  .menu-article .active {
    color: rgba(var(--colors-text-link));
  }
  @media (min-width: 768px) {
    .size_breadcrumbs {
      font-size: {{ size_breadcrumbs }}rem;
    }
  }
{% endstyle %}
<article
  class="page__container pt-[{{ section.settings.top_padding | times: 0.75 | round: 0 }}px] md:pt-[{{ section.settings.top_padding }}px] pb-[{{ section.settings.bottom_padding | times: 0.75 | round: 0 }}px] md:pb-[{{ section.settings.bottom_padding }}px]"
  itemscope
  itemtype="http://schema.org/BlogPosting"
>
  {%- if section.settings.menu_heading != blank or section.settings.menu_left != blank -%}
    {%- liquid
      assign heading_size = section.settings.menu_heading_size | times: settings.heading_base_size | times: 0.000225
    -%}
    {%- style -%}
      .heading--{{ section.id }} {
        font-size: 0.7875rem;
        text-align: center
      }
      @media only screen and (min-width: 768px) {
        .heading--{{ section.id }} {
         font-size: {{ heading_size }}rem;
         text-align: left
        }
      }
    {%- endstyle -%}
    <div class="article--{{ section.id }}{% if section.settings.menu_heading == blank or section.settings.menu_left == blank %} page-width{% endif %} ml-auto mr-auto pr-0 pl-0 flex flex-wrap relative">
      {%- if section.settings.menu_left != blank -%}
        <div class="menu-article-left lg:w-1/5 order-1">
          <div class="md:sticky pl-3 pr-3 pb-3.5 pt-3.5 top-28">
            {%- if section.settings.menu_heading_left != blank -%}
              <div class="heading--{{ section.id }} pb-3 pt-3 lg:pt-0 h2 pl-4 pr-4">
                {{ section.settings.menu_heading_left }}
              </div>
            {%- endif -%}
            <ul class="inline-flex flex-wrap items-center">
              {%- for link in section.settings.menu_left.links -%}
                {%- liquid
                  assign is_link = false
                  if link.links != blank
                    assign is_link = true
                  endif
                -%}
                <li
                  {% if link.current or link.child_active %}
                    x-data="{ openSub: true }"
                  {% else %}
                    x-data="{ openSub: false }"
                  {% endif %}
                  class="w-full relative pl-4 pr-4 font-normal{% if link.current or link.child_active %} active-menu{% endif %}"
                >
                  <div
                    @click="openSub = !openSub"
                    class="sub-menu flex items-center{% unless forloop.first %} pt-2{% endunless %}"
                  >
                    <div class="flex-1">
                      {% if is_link %}
                        <p
                          class="font-semibold w-full pb-2 pr-4 relative cursor-pointer nav-link p-break-words inline-block duration-200 transition hover-text-link is-focus-child:effect-inline{% if link.current or link.child_active %} flex border-b effect-inline{% endif %}"
                          :class="openSub && 'border-b effect-inline'"
                        >
                      {% else %}
                        <a
                          href="{{ link.url }}"
                          class="font-semibold w-full pb-2 nav-link relative p-break-words flex items-center pr-5 duration-200 transition hover-text-link is-focus-child:effect-inline{% if link.current or link.child_active %} flex border-b effect-inline{% endif %}"
                          :class="openSub && 'border-b effect-inline'"
                        >
                      {% endif %}
                      <span>{{ link.title | escape }}</span>
                      {%- if is_link -%}
                        <span class="z-10 w-5 h-4 pt-1 pb-1 pr-1 pl-1 rounded-full block absolute right-0 top-1">
                          {%- render 'icon-alls', icon: 'icon-caret' -%}
                        </span>
                        </p>
                      {% else %}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                  {%- if is_link -%}
                    <div
                      class="left-full w-full"
                      :class="openSub ? 'opacity-1 max-h-auto' : 'opacity-0 max-h-0 overflow-hidden' "
                    >
                      <ul class="pt-5 pb-5 mb-2">
                        {%- for childlink in link.links -%}
                          {%- liquid
                            assign is_link = false
                            if childlink.links != blank
                              assign is_link = true
                            endif
                          -%}
                          <li
                            class="relative pl-5"
                            {% if childlink.current or childlink.child_active %}
                              x-data="{ openChild: true }"
                            {% else %}
                              x-data="{ openChild: false }"
                            {% endif %}
                          >
                            <div
                              @click="openChild = !openChild"
                              class="flex items-center{% unless forloop.first %} pt-3{% endunless %}"
                            >
                              <div class="flex-1">
                                {% if is_link %}
                                  <p
                                    class="cursor-pointer relative nav-link flex items-center pr-5 p-break-words duration-200 hover-text-link transition is-focus-subchild:effect-inline{% if childlink.current or childlink.child_active %} border-b pb-2 effect-inline{% endif %}"
                                    :class="openChild && 'border-b pb-2 effect-inline'"
                                  >
                                {% else %}
                                  <a
                                    href="{{ childlink.url }}"
                                    class="relative nav-link inline-block p-break-words duration-200 hover-text-link transition is-focus-subchild:effect-inline{% if childlink.current or childlink.child_active %} border-b pb-2 effect-inline{% endif %}"
                                    :class="openChild && 'border-b pb-2 effect-inline'"
                                  >
                                {% endif %}
                                <span>{{ childlink.title | escape }}</span>
                                {%- if is_link -%}
                                  <span class="z-10 w-5 h-4 pt-1 pb-1 pl-1 pr-1 rounded-full block absolute right-0 top-1/2 -translate-y-1/2">
                                    {%- render 'icon-alls', icon: 'icon-caret' -%}
                                  </span>
                                  </p>
                                {% else %}
                                  </a>
                                {% endif %}
                              </div>
                            </div>
                            {%- if is_link -%}
                              <ul class="w-full left-full pt-5 pb-5" x-show="openChild">
                                {%- for grandchildlink in childlink.links -%}
                                  <li class="flex items-center pl-5 relative{% unless forloop.first %} pt-3{% endunless %}">
                                    <span class="flex-1">
                                      <a
                                        class="nav-link relative p-break-words duration-200 transition hover-text-link{% if grandchildlink.current %} flex border-b effect-inline{% else %} inline-block{% endif %}"
                                        href="{{ grandchildlink.url }}"
                                        {% if grandchildlink.current %}
                                          aria-current="page"
                                        {% endif %}
                                      >
                                        {{ grandchildlink.title | escape }}
                                      </a>
                                    </span>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endif -%}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        </div>
      {%- endif -%}
      {%- if section.settings.menu_heading != blank -%}
        <div
          class="menu-article lg:w-1/5 lg:mb-20{% if section.settings.menu_left != blank %} absolute lg:relative hidden lg:block order-3{%- endif -%}"
          x-data="xArticle"
          x-init="loadData($el)"
        >
          <div class="md:sticky pl-3 pr-3 md:pl-5 md:pr-5 pt-3 pb-3 md:pt-3.5 md:pb-3.5 top-28 border">
            <div class="heading--{{ section.id }} pb-3 md:pb-5 h2">{{ section.settings.menu_heading }}</div>
            <ul class="list-menu-article inline-flex flex-wrap items-center"></ul>
          </div>
        </div>
      {%- endif -%}
      <div class="{% if section.settings.menu_heading == blank or section.settings.menu_left == blank %} md:w-3/4 {% else %} lg:w-3/5{% endif %} order-2{% if section.settings.menu_left != blank %} md:pl-5{% endif %}">
        <div
          class="search-article mb-2 w-full right-0 pt-4 md:pt-12 pl-5 pr-5"
          x-data="xModalSearch('{{ search_type }}','{{ settings.search_desktop_maximun_results }}',{{ settings.search_mobile_maximun_results }}, '{{ 'templates.search.product_type_default' | t }}')"
        >
          <form
            id="form-search-{{ section.id }}"
            class="grow relative"
            action="{{ routes.search_url }}"
            method="get"
            role="search"
            @click.away="loading = true"
          >
            <input
              id="search-in-modal"
              class="peer focus-visible:outline-none pt-4 pb-4 pr-8 pl-5 text-left w-full appearance-none relative outline-none bg-transparent placeholder:text-current placeholder:opacity-60"
              type="search"
              name="q"
              value=""
              x-on:keyup="keyUp()"
              @focus="focusForm()"

              placeholder="{{ 'general.search.search' | t }}"
            >
            <input type="hidden" name="type" value="article">
            <input type="hidden" name="options[prefix]" value="last">
            <button
              class="absolute none_border w-7 h-7 pt-1 pb-1 pl-1 pr-1 right-7 lg:right-2 top-1/2 -translate-y-1/2 opacity-60 bg-none text-current"
              aria-label="{{ 'general.search.search' | t }}"
            >
              {%- render 'icon-alls', icon: 'icon-search' -%}
            </button>
            {%- if settings.predictive_search_enabled -%}
              <div
                id="search-result"
                class="md:max-h-96 absolute top-[calc(100%+12px)] w-full left-0 z-10"
                tabindex="-1"
                data-predictive-search
                x-html="result"
                x-show="loading == false"
              >
                <div class="predictive-search__loading-state">
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    class="spinner"
                    viewBox="0 0 66 66"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
                </div>
              </div>
              {% if settings.search_recomendation != blank or settings.popular_product_search != blank %}
                <div
                  id="suggest-search"
                  class="absolute top-[calc(100%+12px)] w-full left-0"
                  tabindex="-1"
                  data-predictive-search
                  x-cloak
                  :class="showSuggest ? 'block' : 'hidden'"
                >
                  {%- render 'suggest-search',
                    search_recomendation: settings.search_recomendation,
                    popular_product_search: settings.popular_product_search
                  -%}
                </div>
              {% endif %}
            {%- endif -%}
          </form>
        </div>
  {%- endif -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'featured_image' -%}
        {%- if article.image -%}
          {% style %}
            .mobile-{{ block.id }}-natural{
              height:0;
              padding-bottom: {{ 1 | divided_by: article.image.aspect_ratio | times: 100 }}%;
            }
            @media (min-width: 768px) {
              .desktop-{{ block.id }}-natural{
                  height:0;
                  padding-bottom: {{ 1 | divided_by: article.image.aspect_ratio | times: 100 }}%;
              }
            }
          {% endstyle %}
          <div
            class="{% if block.settings.full_width %} md:pl-0 md:pr-0{% else %} page-width mx-auto{% endif %}{% if block.settings.full_width_mobile %} full-width-mobile{% else %} pr-5 pl-5{% endif %}"
            {{ block.shopify_attributes }}
          >
            <div
              itemprop="image"
              class="promotion w-full overflow-hidden relative{% if block.settings.mobile_height != 'auto' %} h-[{{ block.settings.mobile_height }}] md:h-auto{% else %} mobile-{{ block.id }}-natural{% endif %}{% if block.settings.desktop_height != 'auto' %} md:promotion:h-[{{ block.settings.desktop_height }}] md:promotion:pb-0{% else %} desktop-{{ block.id }}-natural{% endif %}{% if block.settings.full_width %} md:rounded-none{% else %}{% if settings.edges_type == 'rounded_corners' %} md:rounded-[10px]{% endif %}{% endif %}{% unless block.settings.full_width_mobile %}{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}{% endunless %}"
            >
              <img
                srcset="
                  {{ article.image | image_url: width: 450 }} 450w,
                  {{ article.image | image_url: width: 750 }} 750w,
                  {{ article.image | image_url: width: 900 }} 900w,
                  {{ article.image | image_url: width: 1100 }} 1100w,
                  {{ article.image | image_url: width: 1780 }} 1780w,
                  {{ article.image | image_url: width: 2000 }} 2000w,
                  {{ article.image | image_url: width: 3000 }} 3000w
                "
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width }}px, 100vw"
                src="{{ article.image | image_url: width: 3000 }}"
                alt="{{ article.image.alt | escape }}"
                loading="lazy"
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
                class="h-full w-full absolute object-cover top-0 left-0"
              >
            </div>
          </div>
        {%- endif -%}
      {%- when 'breadcrumbs' -%}
        {% if settings.advanced_show_breadcrumbs %}
          <div class="size_breadcrumbs" itemprop="articleBody" {{ block.shopify_attributes }}>
            {% render 'breadcrumbs',
              background_color_light: block.settings.background_color_light,
              text_color_light: block.settings.text_color_light,
              textlink_color_light: block.settings.textlink_color_light,
              background_color_dark: block.settings.background_color_dark,
              text_color_dark: block.settings.text_color_dark,
              textlink_color_dark: block.settings.textlink_color_dark,
              desktop_content_alignment: block.settings.desktop_content_alignment,
              mobile_content_alignment: block.settings.mobile_content_alignment,
              full_width_breadcrumb: block.settings.full_width_breadcrumb,
              show_breadcrumbs_border: block.settings.show_breadcrumbs_border,
              show_image_banner: show_image_banner
            %}
          </div>
        {% endif %}
      {%- when 'title' -%}
        <header class="page__title page-width ml-auto mr-auto mt-6 mb-4 md:mt-12" {{ block.shopify_attributes }}>
          <h1 class="mb-3" itemprop="headline">{{ article.title | escape }}</h1>
          {% if block.settings.blog_show_author %}
            <span class="w-max capitalize mr-0.5"
              ><span>{{ 'sections.featured_blog.by_author' | t }} </span>
              <span>
                {% if article.metafields.custom.author_name.value %}
                  {{ article.metafields.custom.author_name.value }}
                {% else %}
                  {{ 'blogs.article.admin' | t }}
                {% endif %}
              </span>
            </span>
          {% endif %}
          {% if block.settings.blog_show_date %}
            <span class="w-max mr-2">
              {{- 'sections.featured_blog.on_date' | t }}
              {{ article.published_at | date: '%b %d, %Y' -}}
            </span>
          {% endif %}
        </header>
      {%- when 'content' -%}
        <div
          class="page__body ml-auto mr-auto rte pt-4 mb-8 md:mb-10 p-break-words"
          itemprop="articleBody"
          {{ block.shopify_attributes }}
        >
          {{ article.content }}
        </div>
      {%- when 'button' -%}
        <div class="page-width ml-auto mr-auto" {{ block.shopify_attributes }}>
          <div class="flex justify-between flex-col md:flex-row pt-2 pb-2 md:pt-6 md:pb-6 border-t border-b">
            {% if block.settings.show_back_to_blog %}
              <div class="size_breadcrumbs article-template__back element-margin-top center pt-2 pb-2 md:pb-0 md:pt-0 md:max-w-[33%]">
                <a
                  class="nav-link relative article-template__link link animate-arrow flex justify-start items-center disable-effect lg:hover:text-[rgb(var(--colors-text-link))] font-semibold"
                  href="{{ blog.url }}"
                >
                  <span class="-rotate-180 mr-2 opacity-50">
                    {%- render 'icon-alls', icon: 'icon-arrow', enable_blog_detail: true -%}
                  </span>
                  {{ 'blogs.article.back_to_blog' | t: title: blog.title }}
                </a>
              </div>
            {%- endif -%}
            {% if block.settings.blog_show_tags %}
              {%- if article.tags.size > 0 -%}
                <ul class="text-xs pt-2 pb-2 md:pb-0 md:pt-0 md:max-w-[33%]">
                  {%- for tag in article.tags -%}
                    <li class="inline-block cursor-pointer bg-[rgba(var(--colors-text),0.1)]{% unless forloop.last %} mr-1 mb-1{% endunless %}">
                      <a
                        class="inline-block pl-3 pr-3 pt-1 pb-1 disable-effect hover:text-current"
                        href="{{ blog.url }}/tagged/{{ tag | handle }}"
                        >#{{ tag -}}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            {%- endif -%}
            {% if block.settings.blog_show_share_social %}
              {%- if settings.share_facebook or settings.share_twitter or settings.share_pinterest -%}
                <div
                  class="flex justify-start md:justify-end items-center h-fit pt-2 pb-2 md:pb-0 md:pt-0 md:max-w-[33%]"
                  {{ block.shopify_attributes }}
                >
                  <p class="mr-1">{{ 'products.product.share_social' | t }}</p>
                  {% render 'social-sharing' %}
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
    {%- endcase -%}
  {%- endfor -%}
  {%- if blog.comments_enabled? -%}
    <div class="page-width ml-auto mr-auto" id="Comments-{{ article.id }}">
      {%- if article.comments_count > 0 -%}
        {% if section.settings.blog_show_comment_counts %}
          <h2 class="mt-14 md:mt-16 outline-none" tabindex="-1">
            {{ 'blogs.article.comments' | t: count: article.comments_count }}
          </h2>
        {% endif %}
        {%- assign anchorId = '#Comments-' | append: article.id -%}
        {% paginate article.comments by 5 %}
          <div class="mt-7 md:mt-10">
            {%- if comment.status == 'pending' and comment.content -%}
              <article id="{{ comment.id }}">
                {{ comment.content }}
                <footer class="right">
                  <span>{{ comment.author }}</span>
                </footer>
              </article>
            {%- endif -%}
            {%- for comment in article.comments -%}
              <article id="{{ comment.id }}" class="mb-8 md:mb-10 flex items-start">
                <div>
                  {% render 'icon-placeholder', icon: 'icon-image-account' %}
                </div>
                <div class="ml-4 mt-2 md:ml-6">
                  {{ comment.content }}
                  <footer class="size_breadcrumbs right mt-5">
                    <span>{{ comment.author }}</span>
                    <span class="pl-2 pr-2 opacity-40">|</span>
                    <span class="opacity-70">{{ comment.created_at | date: '%b %d, %Y' }}</span>
                  </footer>
                </div>
              </article>
            {%- endfor -%}
            {% render 'pagination', paginate: paginate, anchor: anchorId, enable_blog_detail: true %}
          </div>
        {% endpaginate %}
      {%- endif -%}
      {% form 'new_comment', article %}
        {%- liquid
          assign post_message = 'blogs.article.success'
          if blog.moderated? and comment.status == 'unapproved'
            assign post_message = 'blogs.article.success_moderated'
          endif
        -%}
        <h2 class="mb-6 mt-16 md:mt-20 md:mb-9 outline-none">{{ 'blogs.article.comment_form_title' | t }}</h2>
        {%- if form.posted_successfully? -%}
          <div role="status">
            <p
              class="mb-10 md:mb-11 outline-none pl-4 pr-4 pt-3.5 pb-3.5 mt-4 bg-[rgba(var(--color-success),0.1)] w-fit"
              tabindex="-1"
              autofocus
            >
              <span class="text-[rgba(var(--color-success))]">
                {%- render 'icon-alls', icon: 'icon-success', enable_blog_detail: true -%}
              </span>
              {{ post_message | t }}
            </p>
          </div>
        {%- endif -%}
        <div>
          <div class="md:flex">
            <div class="mb-3 md:mb-3.5 md:w-1/2 md:mr-3.5 flex-1 relative">
              <input
                id="CommentForm-author"
                class="w-full border pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 focus:outline-none focus:border-current input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                type="text"
                name="comment[author]"
                autocomplete="name"
                value="{{ form.author }}"
                aria-required="true"
                required
                {% if form.errors contains 'author' %}
                  aria-invalid="true"
                  aria-describedby="CommentForm-author-error"
                {% endif %}
                placeholder="{{ 'blogs.article.name' | t }}"
              >
              <label
                class="leading-tight absolute top-1/2 left-5 lg:left-6 -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                for="CommentForm-author"
              >
                {{- 'blogs.article.name' | t }}
                <span aria-hidden="true">*</span>
              </label>
              {%- if form.errors contains 'author' -%}
                <small id="CommentForm-author-error">
                  <span>
                    {%- render 'icon-alls', icon: 'icon-error', enable_blog_detail: true -%}
                    {{- 'blogs.article.name' | t }}
                    {{ form.errors.messages.author }}.</span
                  >
                </small>
              {%- endif -%}
            </div>
            <div class="mb-3 md:mb-3.5 md:w-1/2 flex-1 relative">
              <input
                id="CommentForm-email"
                class="w-full border pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 focus:outline-none focus:border-current input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                type="email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                name="comment[email]"
                value="{{ form.email }}"
                autocorrect="off"
                autocapitalize="off"
                aria-required="true"
                required
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="CommentForm-email-error"
                {% endif %}
                placeholder="{{ 'blogs.article.email' | t }}"
              >
              <label
                class="leading-tight absolute top-1/2 left-5 lg:left-6 -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                for="CommentForm-email"
              >
                {{- 'blogs.article.email' | t }}
                <span aria-hidden="true">*</span>
              </label>
              {%- if form.errors contains 'email' -%}
                <small id="CommentForm-email-error" class="block mt-2.5">
                  <span class="mr-1.5">{% render 'icon-alls', icon: 'icon-error', enable_blog_detail: true %}</span>
                  {{- 'blogs.article.email' | t }}
                  {{ form.errors.messages.email }}.
                </small>
              {%- endif -%}
            </div>
          </div>
          <div class="mb-2.5 flex-1 relative">
            <textarea
              id="CommentForm-body"
              class="w-full border pl-5 pr-5 pt-5 pb-3.5 md:pl-6 md:pr-6 md:pb-4 focus:outline-none focus:border-current input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
              rows="5"
              name="comment[body]"
              aria-required="true"
              required
              {% if form.errors contains 'body' %}
                aria-invalid="true"
                aria-describedby="CommentForm-body-error"
              {% endif %}
              placeholder="{{ 'blogs.article.message' | t }}"
            >{{ form.body }}</textarea>
            <label
              class="leading-tight absolute top-5 left-5 lg:left-6 -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
              for="CommentForm-body"
            >
              {{- 'blogs.article.message' | t }}
              <span aria-hidden="true">*</span>
            </label>
          </div>
          {%- if form.errors contains 'body' -%}
            <small id="CommentForm-body-error">
              <span>
                {%- render 'icon-alls', icon: 'icon-error', enable_blog_detail: true -%}
                {{- 'blogs.article.message' | t }}
                {{ form.errors.messages.body }}.</span
              >
            </small>
          {%- endif -%}
        </div>
        {%- if blog.moderated? -%}
          <p>{{ 'blogs.article.moderated' | t }}</p>
        {%- endif -%}
        <div class="text-center md:text-start">
          <button
            type="submit"
            class="button button-solid text-center pl-7 pr-7 pt-3 pb-3 md:pl-8 md:pr-8 md:pt-3.5 md:pb-3.5 cursor-pointer"
          >
            {%- assign button_label = 'blogs.article.send_comment' | t -%}
            {% render 'button-label', button_label: button_label %}
          </button>
        </div>
      {% endform %}
    </div>
  {%- endif -%}
  {%- if section.settings.menu_heading != blank or section.settings.menu_left != blank -%}
    </div>
    </div>
    <script src="{{ 'article.js' | asset_url }}" defer></script>
  {%- endif -%}
</article>
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Article",
    "articleBody": {{ article.content | strip_html | json }},
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": {{ request.origin | append: page.url | json }}
    },
    "headline": {{ article.title | json }},
    {% if article.excerpt != blank %}
      "description": {{ article.excerpt | strip_html | json }},
    {% endif %}
    {% if article.image %}
      "image": [
        {{ article | image_url: width: article.image.width | prepend: "https:" | json }}
      ],
    {% endif %}
    "datePublished": {{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "dateCreated": {{ article.created_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      {% if settings.share_image %}
        "logo": {
          "@type": "ImageObject",
          "height": {{ settings.share_image.height | json }},
          "url": {{ settings.share_image | image_url: width: settings.share_image.width | prepend: "https:" | json }},
          "width": {{ settings.share_image.width | json }}
        },
      {% endif %}
      "name": {{ shop.name | json }}
    }
  }
</script>

