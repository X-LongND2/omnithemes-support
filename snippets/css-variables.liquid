{%- liquid
  case settings.buttons_type
    when 'rounded'
      assign borderRadius = '100px'
    when 'rounded_corners'
      assign borderRadius = '6px'
    when 'mixed'
      assign borderRadius = '6px 0 6px 0'
    else
      assign borderRadius = '0'
  endcase
%}
  
