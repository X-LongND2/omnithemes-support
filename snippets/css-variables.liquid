    --background-color-header: {{ settings.colors_header_background.red }}, {{ settings.colors_header_background.green }}, {{ settings.colors_header_background.blue }};
    --colors-text-header: {{ settings.colors_header_text.red }}, {{ settings.colors_header_text.green }}, {{ settings.colors_header_text.blue }};
    --background-color-footer: {{ settings.colors_footer_background.red }}, {{ settings.colors_footer_background.green }}, {{ settings.colors_footer_background.blue }};
    --colors-text-footer: {{ settings.colors_footer_text.red }}, {{ settings.colors_footer_text.green }}, {{ settings.colors_footer_text.blue }};
    --colors-heading-footer: {{ settings.colors_footer_heading.red }}, {{ settings.colors_footer_heading.green }}, {{ settings.colors_footer_heading.blue }};
    --colors-text-link-footer: {{ settings.colors_footer_textlink.red }}, {{ settings.colors_footer_textlink.green }}, {{ settings.colors_footer_textlink.blue }};
    --color-error: {{ settings.colors_error.red }}, {{ settings.colors_error.green }}, {{ settings.colors_error.blue }};
    --color-success: {{ settings.colors_success.red }}, {{ settings.colors_success.green }}, {{ settings.colors_success.blue }};
    --colors-price: {{ settings.colors_price.red }}, {{ settings.colors_price.green }}, {{ settings.colors_price.blue }};
    --colors-price-sale: {{ settings.colors_price_sale.red }}, {{ settings.colors_price_sale.green }}, {{ settings.colors_price_sale.blue }};
    --colors-button-text: {{ settings.colors_button_text.red }}, {{ settings.colors_button_text.green }}, {{ settings.colors_button_text.blue }};
    --colors-button: {{ settings.colors_button.red }}, {{ settings.colors_button.green }}, {{ settings.colors_button.blue }};
    --colors-button-text-hover: {{ settings.colors_button_text_hover.red }}, {{ settings.colors_button_text_hover.green }}, {{ settings.colors_button_text_hover.blue }};
    --colors-secondary-button: {{ settings.colors_button_secondary.red }}, {{ settings.colors_button_secondary.green }}, {{ settings.colors_button_secondary.blue }};
    --colors-button-hover: rgb({{ settings.colors_button_hover.red }}, {{ settings.colors_button_hover.green }}, {{ settings.colors_button_hover.blue }});
    --colors-cart: {{ settings.colors_cart_dot.red }}, {{ settings.colors_cart_dot.green }}, {{ settings.colors_cart_dot.blue }};
    --colors-cart-text: {{ settings.colors_cart_dot_text.red }}, {{ settings.colors_cart_dot_text.green }}, {{ settings.colors_cart_dot_text.blue }};
    --colors-icon-rating: {{ settings.colors_icon_rating.red }}, {{ settings.colors_icon_rating.green }}, {{ settings.colors_icon_rating.blue }};
    {% if settings.background_button_secondary.alpha != 0.0 %}
      --background-secondary-button: {{ settings.background_button_secondary.red }}, {{ settings.background_button_secondary.green }}, {{ settings.background_button_secondary.blue }};
      --colors-line-secondary-button: {{ settings.background_button_secondary.red }}, {{ settings.background_button_secondary.green }}, {{ settings.background_button_secondary.blue }};
    {% else %}
      --background-secondary-button: transparent;
      --colors-line-secondary-button: {{ settings.colors_button_secondary.red }}, {{ settings.colors_button_secondary.green }}, {{ settings.colors_button_secondary.blue }};
    {% endif %}
    {% if settings.buttons_animation == 'slide' %}
      --button-width: 102%;
      --button-height: 500%;
      --button-transform: rotate3d(0,0,1,-10deg) translate3d(-130%,-10em,0);
      --button-transform-origin: 100% 0%;
    {% elsif settings.buttons_animation == 'fill_up' %}
      --button-width: 120%;
      --button-height: 100%;
      --button-transform: rotate3d(0,0,1,10deg) translate3d(-1.2em,110%,0);
      --button-transform-origin: 0% 100%;
    {% endif %}
    {% if settings.disable_parallax_effect %}
      --height-parallax: 100%;
    {% else %}
      --height-parallax: 110%;
    {% endif %}
    {% if settings.disable_zoom %}
      --image-zoom: 1;
    {% else %}
      --image-zoom: 1.05;
    {% endif %}
  }
  .dark,
  .dark *:before {
    --image-treatment-overlay: {{ settings.colors_dark_image_treatment_overlay.red }}, {{ settings.colors_dark_image_treatment_overlay.green }}, {{ settings.colors_dark_image_treatment_overlay.blue }};
    --image-treatment-text: {{ settings.colors_dark_image_treatment_text.red }}, {{ settings.colors_dark_image_treatment_text.green }}, {{ settings.colors_dark_image_treatment_text.blue }};
    --colors-line-and-border: {{ settings.colors_dark_line_and_borders.red }}, {{ settings.colors_dark_line_and_borders.green }}, {{ settings.colors_dark_line_and_borders.blue }};
    --colors-line-header: {{ settings.colors_dark_header_line.red }}, {{ settings.colors_dark_header_line.green }}, {{ settings.colors_dark_header_line.blue }};
    --colors-line-footer: {{ settings.colors_dark_footer_line.red }}, {{ settings.colors_dark_footer_line.green }}, {{ settings.colors_dark_footer_line.blue }};
    --colors-background: {{ settings.colors_dark_background.red }}, {{ settings.colors_dark_background.green }}, {{ settings.colors_dark_background.blue }};
    --colors-text: {{ settings.colors_dark_text.red }}, {{ settings.colors_dark_text.green }}, {{ settings.colors_dark_text.blue }};
    --colors-heading: {{ settings.colors_dark_heading.red }}, {{ settings.colors_dark_heading.green }}, {{ settings.colors_dark_heading.blue }};
    --background-color: {{ settings.colors_dark_background.red }}, {{ settings.colors_dark_background.green }}, {{ settings.colors_dark_background.blue }};
    --colors-text-link: {{ settings.colors_dark_text_link.red }}, {{ settings.colors_dark_text_link.green }}, {{ settings.colors_dark_text_link.blue }};
    --color-error: {{ settings.colors_dark_error.red }}, {{ settings.colors_dark_error.green }}, {{ settings.colors_dark_error.blue }};
    --color-success: {{ settings.colors_dark_success.red }}, {{ settings.colors_dark_success.green }}, {{ settings.colors_dark_success.blue }};
    --background-color-header: {{ settings.colors_dark_header_background.red }}, {{ settings.colors_dark_header_background.green }}, {{ settings.colors_dark_header_background.blue }};
    --colors-text-header: {{ settings.colors_dark_header_text.red }}, {{ settings.colors_dark_header_text.green }}, {{ settings.colors_dark_header_text.blue }};
    --background-color-footer: {{ settings.colors_dark_footer_background.red }}, {{ settings.colors_dark_footer_background.green }}, {{ settings.colors_dark_footer_background.blue }};
    --colors-text-footer: {{ settings.colors_dark_footer_text.red }}, {{ settings.colors_dark_footer_text.green }}, {{ settings.colors_dark_footer_text.blue }};
    --colors-heading-footer: {{ settings.colors_dark_footer_heading.red }}, {{ settings.colors_dark_footer_heading.green }}, {{ settings.colors_dark_footer_heading.blue }};
    --colors-text-link-footer: {{ settings.colors_dark_footer_textlink.red }}, {{ settings.colors_dark_footer_textlink.green }}, {{ settings.colors_dark_footer_textlink.blue }};
    --colors-price: {{ settings.colors_dark_price.red }}, {{ settings.colors_dark_price.green }}, {{ settings.colors_dark_price.blue }};
    --colors-price-sale: {{ settings.colors_dark_price_sale.red }}, {{ settings.colors_dark_price_sale.green }}, {{ settings.colors_dark_price_sale.blue }};
    --colors-button-text: {{ settings.colors_dark_button_text.red }}, {{ settings.colors_dark_button_text.green }}, {{ settings.colors_dark_button_text.blue }};
    --colors-button: {{ settings.colors_dark_button.red }}, {{ settings.colors_dark_button.green }}, {{ settings.colors_dark_button.blue }};
    --colors-button-text-hover: {{ settings.colors_dark_button_text_hover.red }}, {{ settings.colors_dark_button_text_hover.green }}, {{ settings.colors_dark_button_text_hover.blue }};
    --colors-secondary-button: {{ settings.colors_dark_button_secondary.red }}, {{ settings.colors_dark_button_secondary.green }}, {{ settings.colors_dark_button_secondary.blue }};
    --colors-button-hover: rgb({{ settings.colors_dark_button_hover.red }}, {{ settings.colors_dark_button_hover.green }}, {{ settings.colors_dark_button_hover.blue }});
    --colors-cart: {{ settings.colors_cart_dot_dark.red }}, {{ settings.colors_cart_dot_dark.green }}, {{ settings.colors_cart_dot_dark.blue }};
    --colors-cart-text: {{ settings.colors_cart_dot_text_dark.red }}, {{ settings.colors_cart_dot_text_dark.green }}, {{ settings.colors_cart_dot_text_dark.blue }};
    --colors-background-secondary: {{ settings.secondary_background_dark.red }}, {{ settings.secondary_background_dark.green }}, {{ settings.secondary_background_dark.blue }};
